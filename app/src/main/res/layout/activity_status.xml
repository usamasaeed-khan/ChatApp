<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Status">
    <include layout="@layout/app_bar_layout"
             android:id="@+id/edit_status_app_bar"/>
    <EditText
            android:inputType="textShortMessage"
            android:maxLength="140"
            android:layout_below="@id/edit_status_app_bar"
            android:layout_width="match_parent"
            android:id="@+id/status_update_input"
            android:hint="Enter Status"
            android:layout_margin="40dp"
            android:layout_height="wrap_content"/>
    <Button
            android:layout_width="wrap_content"
            android:id="@+id/status_update_btn"
            android:layout_centerHorizontal="true"
            android:textColor="#ffff"
            android:background="#570A73"
            android:text="UPDATE STATUS"
            android:layout_below="@id/status_update_input"
            android:layout_height="wrap_content"/>

</RelativeLayout>
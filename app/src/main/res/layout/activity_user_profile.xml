<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfile">

    <ImageView
            android:src="@drawable/male"
            android:layout_width="match_parent"
            android:id="@+id/user_profile_image"
            android:layout_height="290dp" />

    <TextView
            android:layout_marginTop="30dp"
            android:layout_below="@id/user_profile_image"
            android:layout_width="wrap_content"
            android:id="@+id/user_profile_name"
            android:text="USER NAME"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_profile_name"
            android:layout_width="wrap_content"
            android:text="USER STATUS"
            android:id="@+id/user_profile_status"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_profile_status"
            android:id="@+id/user_profile_friends"
            android:layout_width="wrap_content"
            android:text="TOTAL FRIENDS"
            android:layout_height="wrap_content"/>
    <Button
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_profile_friends"
            android:id="@+id/user_profile_send_request"
            android:layout_width="wrap_content"
            android:text="SEND REQUEST"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_profile_send_request"
            android:id="@+id/user_profile_decline_request"
            android:layout_width="wrap_content"
            android:text="DECLINE REQUEST"
            android:layout_height="wrap_content"/>
</RelativeLayout>